{
  "info": {
    "name": "BookingShow API - Postman",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Send OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"phone\": \"+84901234567\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/auth/otp",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "auth",
            "otp"
          ]
        }
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"phone\": \"+84901234567\", \"otp\": \"123456\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/auth/verify",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "auth",
            "verify"
          ]
        }
      }
    },
    {
      "name": "Create Momo Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"amount\": 300000, \"orderInfo\": \"Subscription 300k\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/payments/momo/create",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "payments",
            "momo",
            "create"
          ]
        }
      }
    },
    {
      "name": "Simulate Webhook (curl)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"partnerCode\": \"PARTNER\", \"accessKey\": \"ACCESS\", \"requestId\": \"req_123\", \"orderId\": \"order_123\", \"amount\": \"300000\", \"orderInfo\": \"Subscription\", \"orderType\": \"momo_wallet\", \"transId\": \"tx_123\", \"message\": \"Success\", \"localMessage\": \"Th\\u00e0nh c\\u00f4ng\", \"responseTime\": \"2025-10-21 10:00:00\", \"resultCode\": 0, \"payType\": \"qr\", \"extraData\": \"userId=user_123\", \"signature\": \"<computed_signature>\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/payments/momo/webhook",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "payments",
            "momo",
            "webhook"
          ]
        }
      }
    }
  ]
}